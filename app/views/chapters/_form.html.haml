= simple_form_for([book, chapter]) do |f|
  - if chapter.errors.any?
    #error_explanation
      %h2
        = pluralize(chapter.errors.count, "error")
        prohibited this chapter from being saved:

      %ul
        - chapter.errors.full_messages.each do |msg|
          %li= msg

  .inputs
    = f.input :title

  .actions
    = f.button :submit
